{
  "name": "toolsforthought",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build:app": "tsc -p tsconfig.app.json && node scripts/copy-app-assets.mjs",
    "start": "npm run build:app && electron dist/main/electronMain.js",
    "dev": "npm run start",
    "lint": "tsc --noEmit --pretty false",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "fixtures:phase5": "node scripts/generate-phase5-fixtures.mjs",
    "bench:phase5": "npm run fixtures:phase5 && TFT_RUN_PHASE5_BENCH=1 vitest run --run test/qa.phase5-fixtures-bench.test.ts",
    "acceptance:phase5": "node scripts/run-phase5-acceptance.mjs",
    "ci": "npm run lint && npm run typecheck && npm test"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron": "^37.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  }
}
